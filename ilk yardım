<header>
<h1>İlk Yardım ve Sakatlanmalara Yardım</h1>
<p>20 bölümlük eğitim + 10 soruluk quiz</p>
</header>
<main id="content"></main>

<script>
const content=document.getElementById('content');
const pages=[ 
"Bölüm 1: Temel İlk Yardım - Olay yerinde güvenlik sağlamak önemlidir.",
"Bölüm 2: Kırıklar - Kırık bölgeyi sabitleyin ve hareket ettirmeyin.",
"Bölüm 3: Yanıklar - Yanık bölgeyi soğuk su altında tutun.",
"Bölüm 4: Kanamalar - Temiz bezle baskı uygulayın.",
"Bölüm 5: Boğulma - Heimlich manevrası uygulayın.",
"Bölüm 6: Bayılmalar - Kişiyi yan yatırın ve havayolu açın.",
"Bölüm 7: Zehirlenmeler - Bilgiye göre müdahale edin ve 112'yi arayın.",
"Bölüm 8: Kalp Durması - CPR uygulayın ve yardım çağırın.",
"Bölüm 9: Şok Durumu - Kişiyi sırt üstü yatırın ve sakin olun.",
"Bölüm 10: Isı Çarpması - Serin bir yere taşıyın ve sıvı verin.",
"Bölüm 11: Donmalar - Donmuş bölgeyi yavaşça ısıtın.",
"Bölüm 12: Diş Yaralanmaları - Dişi temiz suda saklayın ve doktora götürün.",
"Bölüm 13: Göz Yaralanmaları - Gözleri yıkayın ve doktora başvurun.",
"Bölüm 14: Kulak Yaralanmaları - Temiz pamukla koruyun.",
"Bölüm 15: Burkulmalar - Buz uygulayın ve sabitleyin.",
"Bölüm 16: Astım Atakları - Rahat nefes almasını sağlayın ve yardım çağırın.",
"Bölüm 17: Alerjik Reaksiyonlar - Epinefrin kullanımı gerekebilir.",
"Bölüm 18: Zehirli Böcek Isırıkları - Temizleyin ve izleyin.",
"Bölüm 19: Suda Boğulma - Hemen CPR uygulayın ve 112 arayın.",
"Bölüm 20: Özet - İlk yardım temel adımlarını hatırlayın."
];

const quizQuestions=[
{question:"İlk yardımın ilk adımı nedir?", options:["Olay yerini güvenli hale getirmek","Hemen müdahale etmek","Panik yapmak"], answer:0},
{question:"Kırık bir uzvu ne yapmadan hareket ettirmemeliyiz?", options:["Hemen yerine koymak","Sabitlemeden","Üzerine bastırmadan"], answer:1},
{question:"Yanıkta ilk yapılması gereken?", options:["Soğuk su uygulamak","Yağ sürmek","Sıcak suyla yıkamak"], answer:0},
{question:"Bayılan bir kişiyi nasıl yatırmalıyız?", options:["Sırt üstü","Yan yatırarak","Oturur şekilde"], answer:1},
{question:"Boğulma durumunda hangi yöntem uygulanır?", options:["Heimlich manevrası","CPR","Soğuk kompres"], answer:0},
{question:"Kalp durması durumunda ne yapmalıyız?", options:["Hemen paniklemek","CPR uygulamak","Kişiyi uyandırmak"], answer:1},
{question:"Isı çarpması durumunda ne yapılır?", options:["Serin yere taşımak","Sıcak su vermek","Güneşte bırakmak"], answer:0},
{question:"Donma durumunda ne yapılmalı?", options:["Hızlı ısıtmak","Yavaşça ısıtmak","Buz uygulamak"], answer:1},
{question:"Alerjik reaksiyonda gerekirse ne yapılır?", options:["Epinefrin uygulamak","Panik yapmak","Su vermek"], answer:0},
{question:"Kanama durumunda ne yapmalıyız?", options:["Baskı uygulamak","Temiz su dökmek","Hemen bandaj yapmak"], answer:0}
];

let currentPage=0;

function showPage(pageIndex){
    content.innerHTML=`<h2>${pages[pageIndex]}</h2>
    <div class="navigation">
    ${pageIndex>0?`<button onclick="showPage(${pageIndex-1})">← Önceki</button>`:''}
    ${pageIndex<pages.length-1?`<button onclick="showPage(${pageIndex+1})">Sonraki →</button>`:''}
    </div>
    ${pageIndex===pages.length-1?`<button onclick="showQuiz()">Quizi Başlat</button>`:''}
    <div id="quiz-container" class="quiz-container"></div>`;
}

function showQuiz(){
    const quizContainer=document.getElementById('quiz-container');
    quizContainer.innerHTML=`<h2>10 Soruluk Quiz</h2>`;
    quizQuestions.forEach((q,i)=>{
        const div=document.createElement('div');
        div.innerHTML=`<p>${i+1}. ${q.question}</p>`;
        q.options.forEach((opt,index)=>{
            const btn=document.createElement('button');
            btn.innerText=opt;
            btn.onclick=()=>{ alert(index===q.answer?"Doğru!":"Yanlış!"); }
            div.appendChild(btn);
        });
        quizContainer.appendChild(div);
    });
}

// Başlangıç
showPage(currentPage);
</script>
