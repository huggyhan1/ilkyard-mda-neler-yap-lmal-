function showPage(){
    document.getElementById("content").innerHTML = pages[page];
}

function nextPage(){
    if(page < pages.length -1){
        page++;
        showPage();
    }else{
        showQuiz();
    }
}

function prevPage(){
    if(page > 0){
        page--;
        showPage();
    }
}

