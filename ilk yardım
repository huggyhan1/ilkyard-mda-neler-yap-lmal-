function createQuestion(num, question, options, correctIndex){
    let html = `<p>${num}) ${question}</p>`;
    options.forEach((opt,i)=>{
        html += `<label class="quiz-option">
        <input type="radio" name="q${num}" value="${i === correctIndex ? 1 : 0}">
        ${opt}
        </label>`;
    });
    return html;
}

function calculateScore(){
    let score = 0;
    let answers = document.querySelectorAll("input[type=radio]:checked");
    answers.forEach(a=> score += parseInt(a.value));

    let percent = score * 10;
    let result = percent >= 50 ? "âœ… GeÃ§ti" : "âŒ KaldÄ±";

    document.getElementById("content").innerHTML = `
    <h2>ğŸ‰ Quiz Sonucu</h2>
    <p>DoÄŸru SayÄ±sÄ±: ${score} / 10</p>
    <p>Puan: ${percent} / 100</p>
    <h3>${result}</h3>
    <button onclick="location.reload()">BaÅŸa DÃ¶n</button>
    `;
}

